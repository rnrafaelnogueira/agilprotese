extends ../layout

block content
  h1 Usuario Grupo
  hr
  br
  p Usuario: #{value.user_id.nome}
  p Grupo: #{value.grupo_id.s_nome}
  form(method="POST", action="/usuariogrupo/delete/#{value._id}", role="form")
    input(type="hidden" name="_method" value="delete")
    input(type="submit" , value="Excluir", class="btn btn-danger")
  br
  a(href="/usuariogrupo" title="Voltar") Voltar
