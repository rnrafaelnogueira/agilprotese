extends ../layout

block content
  h1 Grupo/Recurso
  hr
  br
  p Grupo: #{value.grupo_id.s_nome}
  p Recruso: #{value.recurso_id.s_nome}
  form(method="POST", action="/gruporecurso/delete/#{value._id}", role="form")
    input(type="hidden" name="_method" value="delete")
    input(type="submit" , value="Excluir", class="btn btn-danger")
  br
  a(href="/gruporecurso" title="Voltar") Voltar
